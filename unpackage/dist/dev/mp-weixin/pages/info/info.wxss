.info {
  padding: 20rpx 15rpx;
}
.info .panel {
  background: white;
  box-shadow: 0px 1px 23px 1px rgba(36, 36, 35, 0.08);
  border-radius: 30px;
  padding: 55rpx;
  box-sizing: border-box;
}
.info .panel .agency {
  margin-top: 40rpx;
  color: #fff;
}
.info .panel .agency .agency-name {
  font-size: 28rpx;
  display: inline-block;
  padding: 8rpx 15rpx;
  background: #e6e5e3;
  border-radius: 5px;
}
.info .panel > view:not(.agency) {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 95rpx;
  border-bottom: 1rpx solid rgba(217, 217, 217, 0.9);
}
.info .panel > view:not(.agency) text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333332;
}
.info .panel > view:not(.agency) .right-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.info .panel > view:not(.agency) .right-content text {
  color: #999896;
  font-size: 30rpx;
}
.info .panel > view:not(.agency) .right-content .more {
  height: 30rpx;
  width: 35rpx;
  margin-left: 15rpx;
}
.info .panel > view:not(.agency) .right-content input {
  text-align: right;
  color: #999896;
}
.info .panel > view:not(.agency) .right-content .phcolor {
  color: #999896;
}
.info .panel .avatar .avatar-img {
  width: 80rpx;
  height: 80rpx;
}

